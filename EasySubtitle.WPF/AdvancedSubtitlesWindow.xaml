<Window x:Class="EasySubtitle.WPF.AdvancedSubtitlesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="900">
    <Grid>
        <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Height="420" Width="435" 
                  ItemsSource="{Binding SelectedFiles}" SelectedItem="{Binding SelectedFile}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Checked}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding FileName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Height="420" Width="435" 
                  ItemsSource="{Binding SelectedFile.Subtitles}" AutoGenerateColumns="False" Margin="457,0,0,0" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Checked}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding SubtitleName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Download Selected Subtitles" HorizontalAlignment="Left" Margin="722,439,0,0" VerticalAlignment="Top" Width="160" Command="{Binding Download}"/>
    </Grid>
</Window>
