<Window x:Class="EasySubtitle.WPF.Windows.AdvancedSubtitlesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Subtitles" Height="623.941" Width="1300">
    <Grid>
        <DataGrid HorizontalAlignment="Left" VerticalAlignment="Top" Height="532" Width="664" 
                  ItemsSource="{Binding SelectedFiles}" SelectedItem="{Binding SelectedFile}" AutoGenerateColumns="False" Margin="10,10,0,0">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Checked}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding FileName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid 
                  ItemsSource="{Binding SelectedFile.Subtitles}" AutoGenerateColumns="False" Margin="679,10,10,51" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding Checked}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding SubtitleName}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Download Selected Subtitles" Margin="1119,547,10,10" Command="{Binding Download}"/>
    </Grid>
</Window>
